<tr>
  <td class="px-3"><%= book.name %></td>
  <td class="px-3"><%= book.isbn %></td>
  <td>
    <% book_cover = book.cover.attached? ? book.cover : "sample-book-cover.jpg" %>
    <%= image_tag(book_cover, class: "m-2 img-thumbnail", width: "150") %>
  </td>
  <td class="px-3"><%= link_to("Edit", edit_book_path(book)) %></td>
  <td>
    <%= link_to "Delete", book_path(book),
      method: :delete,
      data: { confirm: "Are you sure you want to delete #{ book.name }?" }
    %>
  </td>
  <td class="px-3">
    <% if book.featured? %>
      ğŸŒŸ Featured Book! <a type="button" class="btn btn-light btn-sm ml-2">Unfeature</a>
    <% else %>
      <button type="button" class="btn btn-warning btn-sm">Feature</button>
    <% end %>
  </td>
</tr>
