<div id="featuredCarousel" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <%= render(partial: "book", collection: @books) %>
  </div>
  <a class="carousel-control-prev" href="#featuredCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" style="background-color: #28a745; border-radius: 10px; padding: 16px;" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#featuredCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" style="background-color: #28a745; border-radius: 10px; padding: 16px;" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
