<%= simple_form_for(:search, method: "get", html: { class: "form-inline" }) do |form| %>
  <%= form.input(:term, input_html: { autocomplete: "off", class: "m-1", value: @search_term }, label: false, placeholder: "Search by name") %>
  <%= form.submit("Search") %>
<% end %>

<table>
  <thead>
    <th class="px-3">Name</th>
  </thead>
  <tbody>
    <%= render(@authors) %>
  </tbody>
</table>

<%= link_to 'Download CSV', authors_path(format: :csv, search: params["search"]&.to_unsafe_h), class: "btn btn-xs btn-success mb-2" %>
<%= paginate(@authors) %>
