<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href="/">
    <%= image_tag("logo.png", alt: "BookLand", width: "100") %>
    <h1 class="d-inline">BookLand!</h1>
  </a>
  <% if request.path.include?('books') %>
    <%= link_to("New", new_book_path, class: "btn btn-success mb-3 ml-3") %>
